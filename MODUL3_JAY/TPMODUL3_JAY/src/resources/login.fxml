<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginController">
    <children>
        <Label text="Login" layoutX="150" layoutY="50" style="-fx-font-size: 20px;" />

        <Label text="Username:" layoutX="50" layoutY="100" />
        <TextField fx:id="usernameField" layoutX="150" layoutY="100" />

        <Label text="Password:" layoutX="50" layoutY="150" />
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="150" />

        <Button text="Login" layoutX="150" layoutY="200" onAction="#handleLogin" />
    </children>
</AnchorPane>
